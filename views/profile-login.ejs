
<% include header %>
<% include navbar %>
 
    
 	 <!-- Main jumbotron -->
    <div class="jumbotron">
         <div class="container">
        
    		<h1>This will be the profile login</h1>

    	</div>   
    </div>
 	<!-- Start container -->
    <div class="container">
        
        <div class="col-sm-6">

			<h1><span class="fa fa-sign-in"></span> Login</h1>

			<!-- show any messages that come back with authentication -->
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
			<% } %>

			<!-- LOGIN FORM -->
			<form action="/formapp1/profiles/login" method="post">
				<div class="form-group">
					<label>Email</label>
					<input type="text" class="form-control" name="email">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" name="password">
				</div>

				<button type="submit" class="btn btn-warning btn-lg">Login</button>
			</form>

			<hr>

			<p>Need an account? <a href="/formapp1/profiles/signup">Signup</a></p>

		</div>
    	

    <!-- End container -->
    </div>    
 
 <% include footer %>