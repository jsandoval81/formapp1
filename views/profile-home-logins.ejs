
<% include header %>
<% include navbar %>
 
    
 	 <!-- Main jumbotron -->
    <div class="jumbotron">
         <div class="container">
        
    		<h1>This will be the profile login manager</h1>

    	</div>   
    </div>
 	<!-- Start container -->
    <div class="container">
        
		<% include profile-navbar %>
	
		<div class="row">

			<!-- LOCAL INFORMATION -->
			<div class="col-sm-6">
				<div class="well" style="word-wrap: break-word;">
					<h3><span class="fa fa-user"></span> Email (Local)</h3>

					<% if (user.local.email) { %>
						<p>
							<strong>id</strong>: <%= user._id %><br>
							<strong>email</strong>: <%= user.local.email %><br>
							<strong>password</strong>: <%= user.local.password %>
						</p>
						
						<a href="/formapp1/profiles/unlink/local" class="btn btn-default">Unlink</a>
					<% } else { %>
						<a href="/formapp1/profiles/link/local" class="btn btn-default">Link Email</a>
					<% } %>

				</div>
			</div>

			<!-- FACEBOOK INFORMATION -->
			<div class="col-sm-6">
				<div class="well" style="word-wrap: break-word;">
					<h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

					<!-- check if the user has this token (is the user authenticated with this social account) -->
					<% if (user.facebook.token) { %>
						<p>
							<strong>id</strong>: <%= user.facebook.id %><br>
							<strong>token</strong>: <%= user.facebook.token %><br>
							<strong>email</strong>: <%= user.facebook.email %><br>
							<strong>name</strong>: <%= user.facebook.name %><br>
						</p>

						<a href="/formapp1/profiles/unlink/facebook" class="btn btn-primary">Unlink</a>
					<% } else { %>
						<a href="/formapp1/profiles/link/facebook" class="btn btn-primary">Link Facebook</a>
					<% } %>

				</div>
			</div>

		</div>

		<div class="row">

			<!-- GOOGLE INFORMATION -->
			<div class="col-sm-6">
				<div class="well" style="word-wrap: break-word;">
					<h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

					<!-- check if the user has this token (is the user authenticated with this social account) -->
					<% if (user.google.token) { %>
						<p>
							<strong>id</strong>: <%= user.google.id %><br>
							<strong>token</strong>: <%= user.google.token %><br>
							<strong>email</strong>: <%= user.google.email %><br>
							<strong>name</strong>: <%= user.google.name %>
						</p>

						<a href="/formapp1/profiles/unlink/google" class="btn btn-danger">Unlink</a>
					<% } else { %>
						<a href="/formapp1/profiles/link/google" class="btn btn-danger">Link Google</a>
					<% } %>

				</div>
			</div>

		</div>

		<div class="page-header text-center">
			<a href="/formapp1/profiles/logout" class="btn btn-default btn-sm">Logout</a>
		</div>

    <!-- End container -->
    </div>    
 
 <% include footer %>